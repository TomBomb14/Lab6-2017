@model IEnumerable<Thomas.Irwin.Ryan.Falcon.Lab6.Models.post>

@{
    ViewBag.Title = "Index";
}

<h2 id="postsPage" style="text-align: center; margin-bottom:20px;">Post's List</h2>

<div class="btn btn-default" style="display:flex;justify-content: center;margin: 0 auto; width: 200px;">
    @Html.ActionLink("Create New", "Create")
</div>

<div style="margin-left:10%; margin-right:10%">
	@foreach (var item in Model)
	{
		<div style="margin-bottom:10px; display:inline-block; width:100%">
			<div style="float:left;">
				<div>
					@Html.DisplayFor(modelItem => item.user.firstName)
				</div>
				<div>
					@Html.DisplayFor(modelItem => item.title)
				</div>
				<div>
					@Html.DisplayFor(modelItem => item.category)
				</div>
				<div style="width: 600px;">
					@Html.DisplayFor(modelItem => item.content)
				</div>
			</div>
			<div style="float:right; margin-top:25px; display:inline-flex; vertical-align:middle;">
				<div class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = item.postId })</div>
				<div class="btn btn-default" style="margin-left:10px;">@Html.ActionLink("Details", "Details", new { id = item.postId })</div>
				<div class="btn btn-default" style="margin-left:10px;">@Html.ActionLink("Delete", "Delete", new { id = item.postId })</div>
			</div>

		</div>
	}
</div>
