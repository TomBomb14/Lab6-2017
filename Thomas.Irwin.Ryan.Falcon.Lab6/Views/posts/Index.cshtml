@model IEnumerable<Thomas.Irwin.Ryan.Falcon.Lab6.Models.post>

@{
    ViewBag.Title = "Index";
}

<h2 id="postsPage" style="text-align: center; margin-bottom:20px;">Post's List</h2>

<div class="btn btn-default" style="display:flex;justify-content: center;margin: 0 auto; width: 200px;">
    @Html.ActionLink("Create New", "Create")
</div>

<div style="margin-left:15%; margin-right:15%">
	@foreach (var item in Model)
	{
		<div style="margin-bottom:10px; display:inline-block; width:100%; text-align: center">
             <h3 >
                @Html.DisplayFor(modelItem => item.title)
            </h3>
				<div style="padding: 10px; font-weight:600;">
                    Author:
					@Html.DisplayFor(modelItem => item.user.firstName)
                    @Html.DisplayFor(modelItem => item.user.lastName)
				</div>
            
           
				<div style=" text-align:match-parent; padding-bottom:15px;">
                    
					@Html.DisplayFor(modelItem => item.content)
				</div>
			
			
				<div class="btn btn-default" style="color:white;">@Html.ActionLink("Edit", "Edit", new { id = item.postId })</div>
				<div class="btn btn-default" style="margin-left:10px; color:white;">@Html.ActionLink("Details", "Details", new { id = item.postId })</div>
				<div class="btn btn-default" style="margin-left:10px; color:white;">@Html.ActionLink("Delete", "Delete", new { id = item.postId })</div>
			

		</div>
	}
</div>
